<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="325dp"
    android:layout_marginStart="23dp"
    android:layout_marginEnd="23dp"
    android:layout_marginBottom="10dp"

    app:cardElevation="10dp"

    app:cardCornerRadius="15dp"
    android:layout_marginTop="10dp"
    android:background="#BFD8FA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginEnd="30dp"
            android:elevation="1dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="-10dp"



            >

            <ImageView
                android:id="@+id/hotel_item_imge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/hotels_item_image_corner"

                android:scaleType="centerCrop"


                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/hotel_item_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/hotel_item_text_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location"
            android:drawableStart="@drawable/baseline_location_on_24_blue"
            android:drawableTint="@color/blue_main"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="4dp"
            />
        <TextView
            android:id="@+id/hotel_item_text_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="0943527822"
            android:drawableStart="@drawable/baseline_local_phone_24"
            android:drawableTint="@color/blue_main"
            android:layout_marginStart="15dp"


            android:textColor="@color/black"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="#3785898F"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/hotel_item_text_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=" Rate"
                android:textStyle="bold"
                android:drawableStart="@drawable/baseline_star_24"
                android:gravity="center_vertical"

                android:layout_marginStart="40dp"
                android:textSize="20sp"
                android:drawableTint="#FFEB3B"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/hotel_item_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book a Room"
                app:cornerRadius="20dp"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"
                />


        </FrameLayout>



    </LinearLayout>



</androidx.cardview.widget.CardView>