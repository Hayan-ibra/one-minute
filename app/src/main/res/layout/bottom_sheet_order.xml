<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/blue_main"
        android:textStyle="bold"
        android:text="please Choose quantity :"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:gravity="center_horizontal"

        >

        <ImageView
            android:id="@+id/bottom_order_minus_button_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/minus"
            app:tint="@color/SURFACE"
            android:layout_marginEnd="10dp"
            android:padding="3dp"
            android:background="@drawable/sh05"/>
        <TextView
            android:id="@+id/text_bottom_order_number"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blue_main"
            android:gravity="center"

            android:background="@drawable/sh04"
            android:padding="10dp"

            />

        <ImageView
            android:id="@+id/bottom_order_pluss_button_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_add_24"
            app:tint="@color/SURFACE"
            android:layout_marginStart="10dp"
            android:background="@drawable/sh03"
            android:padding="3dp"/>





    </LinearLayout>

    <TextView
        android:id="@+id/bottom_order_text_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/blue_main"

        android:text="ssss $"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write notes if you have : "
            android:textColor="@color/blue_main"
            />
        <EditText
            android:id="@+id/bottom_order_edittext_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            />
    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_order_button_done"
        android:layout_width="70dp"
        android:layout_height="40dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/blue_main"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:layout_marginBottom="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Done"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            />

    </androidx.cardview.widget.CardView>






</LinearLayout>