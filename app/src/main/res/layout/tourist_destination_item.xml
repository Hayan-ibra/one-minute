<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="23dp"
    android:layout_marginEnd="23dp"
    android:layout_marginBottom="10dp"

    app:cardElevation="10dp"

    app:cardCornerRadius="15dp"
    android:layout_marginTop="10dp"
    android:background="#BFD8FA"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginEnd="30dp"
            android:elevation="1dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="-10dp"



            >

            <com.example.oneminute.tourism.my_image_view.DynamicImageView
                android:id="@+id/tourist_destination_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@color/blue_main"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tourist_destination_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title Name"
            android:textSize="18sp"
            android:textStyle="bold"

            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <TextView
            android:id="@+id/tourist_destination_text_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location"
            android:drawableStart="@drawable/baseline_location_on_24_blue"
            android:drawableTint="@color/blue_main"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="4dp"
            />
        <TextView
            android:id="@+id/tourist_destination_text_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="0943527822"
            android:drawableStart="@drawable/baseline_location_city_24"
            android:drawableTint="@color/blue_main"
            android:layout_marginStart="15dp"


            android:textColor="@color/black"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="#3785898F"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="30dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_access_time_24_blue"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/tourist_destination_text_work_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 Am"

                    android:padding="5dp"

                    />
                <TextView
                    android:id="@+id/tourist_destination_text_work_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9 pm"

                    android:padding="5dp"

                    />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/hotel_item_button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show more"
                app:cornerRadius="10dp"
                app:strokeColor="@color/blue_main"
                android:textColor="@color/blue_main"
                app:strokeWidth="1dp"
                android:backgroundTint="#00759EF1"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="5dp"
                />


        </FrameLayout>



    </LinearLayout>



</androidx.cardview.widget.CardView>





