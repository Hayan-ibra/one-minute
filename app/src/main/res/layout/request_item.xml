<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"

    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="10dp">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/request_image_color"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="#4CAF50"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/request_text_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="state"
                android:layout_marginStart="10dp"
                android:textSize="16sp"

                />
            <TextView

                android:id="@+id/request_text_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="amount"

                android:textSize="16sp"
                android:layout_marginStart="10dp"

                />
            <TextView

                android:id="@+id/request_text_item_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="code"

                android:textSize="16sp"
                android:layout_marginStart="10dp"

                />
            <TextView

                android:id="@+id/request_text_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="timestamp"

                android:textSize="16sp"
                android:layout_marginStart="10dp"

                />
            <TextView

                android:id="@+id/request_text_item_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="error"
                android:textColor="@color/error"
                android:textSize="16sp"
                android:layout_marginStart="10dp"

                />






        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>