<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp"


    >

    <ImageView
        android:id="@+id/restaurant_item_image"
        android:layout_width="300dp"
        android:layout_height="175dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_vertical"


        android:padding="15dp"
        android:backgroundTint="#3B000000"

        >
        <TextView
            android:id="@+id/restaurant_item_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lighter_accent"
            android:text="Name"
            android:textStyle="bold"
            android:padding="5dp"
            android:drawableStart="@drawable/baseline_article_24"
            android:textSize="14sp"

            android:drawablePadding="3dp"
            android:layout_margin="3dp"
            android:drawableTint="@color/lighter_accent"
            android:layout_gravity="start|top|center_vertical"
            />
        <TextView
            android:id="@+id/restaurant_item_text_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lighter_accent"
            android:text="Location"
            android:padding="5dp"
            android:textSize="14sp"
            android:drawableStart="@drawable/baseline_location_on_24"
            android:drawableTint="@color/lighter_accent"
            android:textStyle="bold"
            android:drawablePadding="3dp"
            android:layout_margin="3dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="end|top|center_vertical"
            />


    </androidx.cardview.widget.CardView>


















</androidx.cardview.widget.CardView>